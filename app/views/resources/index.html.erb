<section class="span9">
  <header class="row-fluid sectionHeader">
    <div class="span6">
      <p class="backlinks">&nbsp;</p>
      <h2> Resources </h2>
    </div>
  </header>
  <div class="content">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-hover table-striped">
      <thead>
    <tr>
      <th>User</th>
      <th>Type</th>
      <th>Average rating</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.user.name %></td>
        <td><%= resource.ResType %></td>
        <td><%= resource.average_rating %></td>
        <td><%= link_to edit_resource_path(resource) do%>
          <%= image_tag('/images/spacer.gif', :class =>"icon_edit") %>
        <%end%>
        <%= link_to image_tag('/images/spacer.gif', :class =>'icon_delete') , resource, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>

<br>

<%= link_to 'New Resource', new_resource_path %>
