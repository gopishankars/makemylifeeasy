<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Customer</th>
      <th>Service type</th>
      <th>Service</th>
      <th>Resource</th>
      <th>Charge</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.status %></td>
        <td><%= request.customer %></td>
        <td><%= request.service_type %></td>
        <td><%= request.service %></td>
        <td><%= request.resource %></td>
        <td><%= request.charge %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

